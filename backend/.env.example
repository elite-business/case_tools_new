# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/casetools_production
DATABASE_USERNAME=casetools_user
DATABASE_PASSWORD=your_secure_password_here
DATABASE_DRIVER=org.postgresql.Driver

# JWT Security - CHANGE THIS IN PRODUCTION!
JWT_SECRET=GENERATE_A_SECURE_256_BIT_SECRET_KEY_HERE
JWT_EXPIRATION_MS=3600000
JWT_REFRESH_EXPIRATION_MS=86400000

# Grafana Configuration
GRAFANA_URL=http://localhost:9000
GRAFANA_API_KEY=your_grafana_api_key_here
GRAFANA_WEBHOOK_SECRET=your_webhook_secret_here

# Application Settings
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
CONTEXT_PATH=/api

# Email Configuration (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@casetools.com
MAIL_FROM_NAME=Case Tools Alert System

# WebSocket Configuration
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:4200

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_ENABLED=true

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG
LOGGING_LEVEL_SQL=WARN

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Alert Processing
ALERT_DUPLICATE_WINDOW_MINUTES=5
ALERT_ESCALATION_MINUTES=30

# Environment
SPRING_PROFILES_ACTIVE=production
NODE_ENV=production